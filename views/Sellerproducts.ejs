<!-- views/SellerProducts.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Seller Products</title>
  <!-- font awesome cdn -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="stylesheets/nav.css">
  <link rel="stylesheet" href="stylesheets/seller.css">
<link rel="stylesheet" href="stylesheets/cursor.css">
</head>

<body>
  <%-include('./partials/nav')%>
  <%-include('./partials/customcursor')%>

  <h1><%= admin.username %>'s Products</h1>

  <% if (products.length > 0) { %>
      <% products.forEach(product => { %>
        <div class="card">
          <strong>Product Name:</strong> <%= product.productName %><br>
          <strong>Description:</strong> <%= product.productDescription %><br>
          <strong>Price:</strong> <%= product.productPrice %><br>
           <img src="<%= product.productImage %>" alt="<%= product.productName %> Image">
          <div class="buttons">
            <a href="/update-product/<%=product._id%>"><button>Update Product</button></a>
            <a href="/delete-product/<%=product._id%>"><button>Delete Product</button></a>
          </div>
        </div>
          
          <% }); %>
  <% } else { %>
    <p>No products available for <%= admin.username %>.</p>
  <% } %>
  <script src="javascripts/cursor.js"></script>
</body>

</html>
